<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <br>
                        <div class="d-flex justify-content-center">
                            <h4 class="card-title">Add Lecture</h4>
                        </div>
                        {{!-- <p class="card-description">
                            Basic form elements
                        </p> --}}
                        <br>
                        <form id="add_lecture_form" class="forms-sample" >
                            <div class="form-group">
                                <label for="cstitle">Lecture No</label>
                                <input name="LtNo" type="number" class="form-control" id="no" placeholder="Lecture no">
                            </div>
                            <div class="form-group">
                                <label for="cstitle">Lecture Title</label>
                                <input name="Title" type="text" class="form-control" id="title" placeholder="Lecture title">
                            </div>
                            <div class="form-group">
                                <label for="cscategory">Course</label>
                                <select required name="Course" class="form-control" id="cscategory">
                                    <option value="" selected disabled>Select Course</option>
                                    {{#each coursesList}}
                                    <option value="{{this._id}}">{{this.Title}}</option>
                                    {{/each}}
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="vid">Video ID</label>
                                <input name="VID" type="text" class="form-control" id="vid" placeholder="Video ID">
                            </div>

                            {{!-- <div class="form-group">
                                <label>Upload Video</label>
                                <input type="file" name="Video" class="file-upload-default">
                                <div class="input-group col-xs-12">
                                    <input type="text" class="form-control file-upload-info" disabled
                                        placeholder="Upload lecture video">
                                    <span class="input-group-append">
                                        <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                                    </span>
                                </div>
                            </div> --}}

                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                <button class="btn btn-light">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>