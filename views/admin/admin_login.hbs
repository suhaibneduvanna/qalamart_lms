<div class="auth-form-light text-left py-5 px-4 px-sm-5 ">

  <div class="d-flex justify-content-center">
    <div style="margin-bottom: 1rem;" class="brand-logo">
      <img src="/../../images/logo.svg" alt="logo">
    </div>
  </div>

  <div class="d-flex justify-content-center p-0">
    <h2 class="text-justify">Qalmart LMS</h2>
  </div>



  <form class="pt-3" method="post" , action="/admin/login">
    <div class="form-group">
      <input name="Email" type="email" class="form-control form-control-lg" id="exampleInputEmail1"
        placeholder="Username">
    </div>
    <div class="form-group">
      <input name="Password" type="password" class="form-control form-control-lg" id="exampleInputPassword1"
        placeholder="Password">
    </div>
    <div class="mt-3">
      <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN IN</button>
    </div>
    <div class="my-2 d-flex justify-content-between align-items-center">
      <div class="form-check">
        <label class="form-check-label text-muted">
          <input name="keepSigned" type="checkbox" class="form-check-input">
          Keep me signed in
        </label>
      </div>
      <a href="#" class="auth-link text-black">Forgot password?</a>
    </div>

  </form>
  {{#if loginError}}
  <div class="row">
    <div class="col-12 text-center ">
      <p class="text-danger">{{loginError}}</p>
    </div>
  </div>
  {{/if}}
</div>
<div class="row mt-4">
  <div class="col-12 text-center mt-xl-2">
    <a class="text-primary font-weight-medium" href="/">Back to home</a>
  </div>
</div>