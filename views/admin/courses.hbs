<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row d-flex justify-content-between p-3">
                            <div>
                                <h4 class="card-title pt-2">All Courses</h4>
                                <p class="card-description">

                                </p>
                            </div>
                            <a href="/admin/add-course" class="btn btn-primary btn-icon-text">
                                <i class="ti-plus btn-icon-prepend"></i>
                                Add
                            </a>
                        </div>


                        <div class="row d-flex justify-content-center">

                            {{#each coursesList}}
                            <div class="card m-5" style="width: 18rem; background-color: #F5F7FF;;">
                                <img class="card-img-top" src="/uploads/course-thumbnail/{{this._id}}.jpg" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.Title}}</h5>
                                    <p class="card-text">{{this.BriefDesc}}</p>
                                </div>

                                <div class="card-body d-flex justify-content-between">
                                    <a type="button" href="/admin/edit-course?id={{this._id}}" class="btn btn-outline-primary btn-icon-text">
                                        <i class="ti-pencil-alt btn-icon-prepend"></i>
                                        Edit
                                    </a>
                                    <a href="/admin/delete-course?id={{this._id}}" onclick="return confirm('Are you sure to delete')"
                                        class="btn btn-outline-danger btn-icon-text">
                                        <i class="ti-trash btn-icon-prepend"></i>
                                        Delete
                                    </a>
                                </div>
                            </div>
                            {{/each}}
                           





                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>