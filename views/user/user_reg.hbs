<div class="auth-form-light text-left py-5 px-4 px-sm-5">
    <div class="brand-logo">
        <img src="/../../images/logo.svg" alt="logo">
    </div>
    <h4>New here?</h4>
    <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
    <form class="pt-3" action="/user/register" method="post">
        <div class="form-group">

            <input required name="Username" type="text" class="form-control form-control-lg" id="exampleInputUsername1"
                placeholder="Username">
        </div>
        <div class="form-group">
            <input required name="Email" type="email" class="form-control form-control-lg" id="exampleInputEmail1"
                placeholder="Email">
        </div>
        <div class="form-group">

            <input required name="Phone" type="tel" class="form-control form-control-lg" id="exampleInputPassword1"
                placeholder="Mobile">
        </div>
        <div class="form-group ">
            <input onkeyup="validate_password1(this.value)" required name="Password" type="password" class="form-control form-control-lg" id="password"
                placeholder="Password">
        </div>
        <div class="form-group">
            <input onkeyup="validate_password(this.value)" required name="CnfPassword" type="text"
                class="form-control form-control-lg" id="cnfPass" placeholder="Confirm Password">

            <span id="error" style="display: none;" class="text-danger">Password doesnot match</span>
        </div>
        <div class="mb-4">
            <div class="form-check">
                <label class="form-check-label text-muted">
                    <input required name="Agreement" type="checkbox" class="form-check-input">
                    I agree to all Terms & Conditions
                </label>
            </div>
        </div>
        <div class="mt-3">
            <button disabled id="signupbt" type="submit"
                class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN
                UP</button>
        </div>
        <div class="text-center mt-4 font-weight-light">
            Already have an account? <a href="/login" class="text-primary">Login</a>
        </div>
    </form>
</div>