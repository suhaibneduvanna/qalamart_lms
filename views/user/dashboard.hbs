<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="row d-flex justify-content-between p-3">
              <div>
                <h4 class="card-title pt-2">Recommended Courses</h4>
                <p class="card-description">

                </p>
              </div>

            </div>


            <div class="row d-flex justify-content-center">
              {{#if coursesList}}

              {{#each coursesList}}
              <div class="card m-5" style="width: 18rem; background-color: #F5F7FF;;">
                <img class="card-img-top" src="/uploads/course-thumbnail/{{this._id}}.jpg" alt="Card image cap">
                <div class="card-body">
                  <input hidden type="text" value="{{this.Price}}" id="course_price_{{@index}}">
                  <input hidden type="text" value="{{this._id}}" id="course_id_{{@index}}">
                  <h5 class="card-title">{{this.Title}}</h5>
                  <p class="card-text">{{this.BriefDesc}}</p>
                  <br>
                  <h4 class="font-weight-bold text-primary"><span class="text-dark">Course fee: </span>&#8377
                    {{this.Price}}</h4>
                  <br>
                  <div class="d-flex justify-content-between">

                    <a href="/user/course-details?id={{this._id}}" class="btn w-100 btn-primary">

                      Details
                    </a>




                  </div>
                </div>


              </div>
              {{/each}}
              {{else}}
              <p>No courses available</p>
              {{/if}}






            </div>
          </div>
        </div>

      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="row d-flex justify-content-between p-3">
              <div>
                <h4 class="card-title pt-2">Recommended Products</h4>
                <p class="card-description">

                </p>
              </div>
              {{!-- <a href="/admin/add-course" class="btn btn-primary btn-icon-text">
                <i class="ti-plus btn-icon-prepend"></i>
                Add
              </a> --}}
            </div>


            <div class="row d-flex justify-content-center">
              {{#if productsList}}
              {{#each productsList}}
              <div class="card m-5" style="width: 18rem; background-color: #F5F7FF;;">
                <img class="card-img-top" src="/uploads/course-thumbnail/{{this._id}}.jpg" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title">{{this.Title}}</h5>
                  <p class="card-text">{{this.BriefDesc}}</p>

                  <h6>Course Fee: <span class="font-weight-bold text-primary">&#8377 {{this.Price}}</span></h6>
                </div>

                <div class="card-body d-flex justify-content-between">

                  <a href="/user/course-details?id={{this._id}}" class="btn btn-outline-danger btn-icon-text">
                    <i class="ti-info btn-icon-prepend"></i>
                    Details
                  </a>
                </div>
              </div>
              {{/each}}
              {{else}}
              <p>No products available</p>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>