<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h3 class="mb-4">Overview</h3>
            <p>{{course.Desc}}</p>
            <br>
            <h6>Course Fee: <span class="font-weight-bold text-primary">&#8377 {{course.Price}}</span></h6>
            
            <input hidden type="text" value="{{course.Price}}" id="course_price">
            <input hidden type="text" value="{{course._id}}" id="course_id">

            <div class="row d-flex justify-content-center">
              <button onclick="initiatePayment()" id="rzp-button1" class="btn btn-primary btn-icon-text">
                <i class="ti-book btn-icon-prepend"></i>
                Enroll
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  